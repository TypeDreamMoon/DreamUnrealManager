<Page
    x:Class="DreamUnrealManager.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:DreamUnrealManager.Helpers"
    Loaded="OnLoaded">

    <Page.Background>
        <ImageBrush ImageSource="../Assets/wallhaven-x6vkvd.png"
                    Stretch="UniformToFill"
                    Opacity="{x:Bind ViewModel.BackgroundSettings.BackgroundOpacity, Mode=OneWay}" />
    </Page.Background>

    <Grid>
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <Image Source="/Assets/WindowIcon.ico"
                   HorizontalAlignment="Left"
                   Width="16"
                   Height="16" />
            <TextBlock x:Name="AppTitleBarText"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="Dream Unreal Launcher"
                       Margin="28,0,0,0" />
        </Grid>
        <NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Visible"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            ExpandedModeThresholdWidth="1280"
            AlwaysShowHeader="False"
            PaneDisplayMode="LeftCompact"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged">
            <NavigationView.MenuItems>

                <NavigationViewItem x:Uid="Shell_Main" helpers:NavigationHelper.NavigateTo="DreamUnrealManager.ViewModels.MainViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA8A;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Uid="Shell_Launcher"
                    helpers:NavigationHelper.NavigateTo="DreamUnrealManager.ViewModels.LauncherViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE9A4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="UnrealLauncherNavItem"
                                    x:Uid="Shell_UnrealLauncher"
                                    helpers:NavigationHelper.NavigateTo="DreamUnrealManager.ViewModels.UnrealLauncherViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A9;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="PluginsBuildNavItem"
                                    x:Uid="Shell_PluginsBuild"
                                    helpers:NavigationHelper.NavigateTo="DreamUnrealManager.ViewModels.PluginsBuildViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xF156;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Uid="Shell_Fab" helpers:NavigationHelper.NavigateTo="DreamUnrealManager.ViewModels.FabViewModel">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="../Assets/Fab.png" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <Grid>
                <Grid.Background>
                    <AcrylicBrush TintOpacity="{x:Bind ViewModel.AcrylicSettings.TintOpacity, Mode=OneWay}"
                                  TintLuminosityOpacity="{x:Bind ViewModel.AcrylicSettings.TintLuminosityOpacity, Mode=OneWay}" />
                </Grid.Background>
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>