<Page
    x:Class="DreamUnrealManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:DreamUnrealManager.Helpers"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.Background>
            <ImageBrush ImageSource="../Assets/wallhaven-x6vkvd.png"></ImageBrush>
        </Grid.Background>

        <Grid>
            <Image
                Height="256"
                HorizontalAlignment="Right"
                Margin="25"
                Source="../Assets/DreamUnrealManager.png"
                VerticalAlignment="Top"
                Width="256" />


            <StackPanel Spacing="25">

                <TextBlock
                    FontSize="50"
                    FontWeight="Bold"
                    Margin="75,50,0,0"
                    Text="Dream Unreal Manager" />

            </StackPanel>

            <Border
                Background="{ThemeResource SystemControlAcrylicElementBrush}"
                CornerRadius="10"
                HorizontalAlignment="Right"
                Margin="25"
                Padding="10"
                VerticalAlignment="Bottom">
                <StackPanel Spacing="10">
                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickLaunchButton"
                        Click="QuickLaunchButton_OnClick">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <Image
                                Grid.Column="0"
                                Height="25"
                                HorizontalAlignment="Left"
                                Margin="0,0,5,0"
                                Source="../Assets/BxsLeftArrow.png"
                                Width="25" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Text="打开项目"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickBuildingButton"
                        Click="QuickBuildingButton_OnClick">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <Image
                                Grid.Column="0"
                                Height="25"
                                Margin="0,0,5,0"
                                Source="../Assets/BxsLeftArrow.png"
                                Width="25" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                Text="开始构建"
                                TextAlignment="Right"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>