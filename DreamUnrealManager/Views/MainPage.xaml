<Page
    x:Class="DreamUnrealManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DreamUnrealManager.Models"
    xmlns:helpers="using:DreamUnrealManager.Helpers"
    mc:Ignorable="d">

    <Page.Resources>

        <helpers:EmptyListToVisibilityConverter x:Key="EmptyListToCollapsedConverter" />
        <helpers:ListToVisibilityConverter x:Key="ListToVisibilityConverter" />
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- 收藏项目模板 -->
        <DataTemplate x:Key="FavoriteProjectTemplate" x:DataType="models:ProjectInfo">
            <Border Margin="0,8"
                    CornerRadius="10"
                    MinHeight="140"
                    Padding="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 左侧项目图标 -->
                    <Border Grid.Column="0" Width="120" Height="120" Margin="12" CornerRadius="8">
                        <Image Source="{x:Bind ProjectIconPath}" Stretch="UniformToFill" ImageFailed="ProjectImage_ImageFailed" />
                    </Border>

                    <!-- 右侧文本信息 -->
                    <StackPanel Grid.Column="1" Spacing="6" Margin="8,12,12,12" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind DisplayName}"
                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                   FontSize="18"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock Text="{x:Bind EngineDisplayName}"
                                   Style="{ThemeResource CaptionTextBlockStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15" Spacing="15">
                        <!-- 快速启动按钮 -->
                        <Button Tag="{x:Bind}"
                                Click="QuickLaunchFavoriteProject_Click">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEDDA;" />
                        </Button>
                        <Button Tag="{x:Bind}"
                                Visibility="{x:Bind IsCPlusPlusProject, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Click="OpenWithIDE_OnClick">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEDDA;" />
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="ProjectItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="Margin" Value="4" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

    </Page.Resources>


    <Grid x:Name="ContentArea" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.Background>
            <ImageBrush ImageSource="../Assets/wallhaven-x6vkvd.png"></ImageBrush>
        </Grid.Background>

        <Grid>
            <Image
                Height="256"
                HorizontalAlignment="Right"
                Margin="25"
                Source="../Assets/DreamUnrealManager.png"
                VerticalAlignment="Top"
                Width="256" />


            <StackPanel Orientation="Vertical"
                        Margin="75,50,0,0">

                <TextBlock
                    FontSize="50"
                    FontWeight="Bold"
                    Text="Dream Unreal Manager"
                    Margin="0, 0, 0, 15"
                    Foreground="White" />

                <TextBlock x:Name="CurrentVersionTextBlock" Foreground="Gray" />
                <TextBlock x:Name="GithubVersionTextBlock" Foreground="Gray" Text="正在检查..." />
                <HyperlinkButton x:Name="NewVersionHyperLinkButton"
                                 NavigateUri="https://github.com/TypeDreamMoon/DreamUnrealManager"
                                 Visibility="Collapsed">
                    <TextBlock Foreground="DeepSkyBlue">发现新版本</TextBlock>
                </HyperlinkButton>

            </StackPanel>

            <Border
                Background="{ThemeResource SystemControlAcrylicElementBrush}"
                CornerRadius="10"
                HorizontalAlignment="Right"
                Margin="25"
                Padding="10"
                VerticalAlignment="Bottom">
                <StackPanel Spacing="10">
                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickLaunchButton"
                        Click="QuickLaunchButton_OnClick">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEDDA;" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Text="打开项目"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickBuildingButton"
                        Click="QuickBuildingButton_OnClick">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEDDA;" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                Text="开始构建"
                                TextAlignment="Right"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Border HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="500"
                MinHeight="50"
                MaxHeight="600"
                Margin="25"
                CornerRadius="8">

            <Border.Background>
                <AcrylicBrush TintColor="{ThemeResource  SystemRevealChromeMediumColor}"
                              TintOpacity="{x:Bind ViewModel.AcrylicSettings.TintOpacity, Mode=OneWay}"
                              TintLuminosityOpacity="{x:Bind ViewModel.AcrylicSettings.TintLuminosityOpacity, Mode=OneWay}" />
            </Border.Background>

            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Padding="15">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="我的收藏"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    <FontIcon FontFamily="Segoe Fluent Icons"
                              Glyph="&#xE735;"
                              HorizontalAlignment="Center" />

                    <TextBlock VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="{x:Bind FavoritesListView.ItemsSource, Mode=OneWay, Converter={StaticResource EmptyListToCollapsedConverter}}"
                               Text="暂无收藏。要不去收藏一个?" />

                </StackPanel>

                <ListView Grid.Row="1" x:Name="FavoritesListView"
                          ItemsSource="{x:Bind FavoritesProjects}"
                          ItemTemplate="{StaticResource FavoriteProjectTemplate}"
                          SelectionMode="None"
                          Visibility="{x:Bind FavoritesListView.ItemsSource, Mode=OneWay, Converter={StaticResource ListToVisibilityConverter}}"
                          IsItemClickEnabled="False" />
            </Grid>
        </Border>

        <HyperlinkButton NavigateUri="https://pns.kurogames.com/"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Bottom"
                         Padding="15"
                         Opacity="0.5">
            <TextBlock Text="图片出处: 战双帕弥什官方 角色: 赛琳娜·希声" FontSize="15" />
        </HyperlinkButton>
    </Grid>
</Page>